# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (if using PostgreSQL instead of in-memory)
DATABASE_URL=postgresql://username:password@localhost:5432/ultrachat

# Security Settings
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# API Limits and Timeouts
API_TIMEOUT=30000
MAX_FILE_SIZE=10485760
MAX_TOKENS=4000

# Tool Configuration
PYTHON_TIMEOUT=30000
SANDBOX_MEMORY_LIMIT=512MB
ALLOW_NETWORK_ACCESS=false

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_QUERY=5
EMBEDDING_MODEL=text-embedding-3-small

# Logging Configuration
LOG_LEVEL=info
AUDIT_LOG_ENABLED=true
LOG_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Admin Configuration
ADMIN_PASSWORD=your_admin_password_here
METRICS_RETENTION_HOURS=24

# External Services (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Redis Configuration (Optional - for production scaling)
REDIS_URL=redis://localhost:6379

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here
